{% extends "@FrontFront/layout.html.twig" %}

{% block title %}{{ getSettingByName('COMPANY_NAME') }} - Mon compte{% endblock %}
{% block meta_description %}{% endblock %}

{% block ogtitle %}{{ getSettingByName('COMPANY_NAME') }} - Mon compte{% endblock %}
{% block ogtype %}website{% endblock %}
{% block ogurl %}{{ app.request.uri }}{% endblock %}
{% block ogimage %}{{ app.request.schemeAndHttpHost() ~ asset('assets_global/img/logo.png') }}{% endblock %}
{% block ogdescription %}{% endblock %}

{% block stylesheets %}
    {#{% if app.debug %}
        <link rel="stylesheet" type="text/css" href="{{ asset('assets_front/vendor/fancybox3/jquery.fancybox.min.css') }}">
    {% else %}
        {% stylesheets filter='cssrewrite'
        'assets_front/vendor/fancybox3/jquery.fancybox.min.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css"/>
        {% endstylesheets %}
    {% endif %}#}
{% endblock %}

{% block body %}
    <div class="container mt50" style="min-height: 550px;">
        <div class="row mt20 mb20">
            <div class="col-md-12">
                {{ include('@User/Profile/tabs.html.twig', {'tab': 'myaddress'}) }}

                <h2>Ajouter une adresse</h2>

                {% for type, messages in app.session.flashbag.all() %}
                    {% for message in messages %}
                        <div class="alert alert-{{ type }}">{{ message }}</div>
                    {% endfor %}
                {% endfor %}

                {{ form_start(form) }}

                {{ form_row(form.civility) }}
                {{ form_row(form.firstname) }}
                {{ form_row(form.lastname) }}
                {{ form_row(form.address) }}
                {{ form_row(form.postalCode) }}
                {{ form_row(form.city) }}
                {{ form_row(form.country) }}

                {{ form_rest(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {#{% if app.debug %}
        <script src="{{ asset('assets_front/vendor/fancybox3/jquery.fancybox.min.js') }}" type="text/javascript"></script>
    {% else %}
        {% javascripts
        'assets_front/vendor/fancybox3/jquery.fancybox.min.js' %}
        <script src="{{ asset_url }}" type="text/javascript"></script>
        {% endjavascripts %}
    {% endif %}#}
{% endblock %}