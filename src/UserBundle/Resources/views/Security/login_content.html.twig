{% trans_default_domain 'FOSUserBundle' %}

<form class="login-form" action="{{ path("front_fos_user_security_check") }}" method="post">
    {% if error %}
        <div class="alert alert-danger">
            <button class="close" data-close="alert"></button>
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
    {% endif %}

    {% if referer is not null %}
        <input type="hidden" name="_target_path" value="/{{ referer }}"/>

    {% endif %}
   <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9" for="username">Adresse mail</label>
        <input class="form-control form-control-solid placeholder-no-fix" type="text" autocomplete="off" id="username" name="_username" value="{{ last_username }}" placeholder="Adresse mail" required="required"/>
    </div>
    <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9" for="password">{{ 'security.login.password'|trans }}</label>
        <input class="form-control form-control-solid placeholder-no-fix" type="password" autocomplete="off" id="password" name="_password" placeholder="{{ 'security.login.password'|trans }}" required="required"/>
    </div>
    <div class="form-actions">
        <input  type="submit" class="btn btn-primary" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"/>
        <label for="remember_me" class="rememberme check mt-checkbox mt-checkbox-outline">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>{{ 'security.login.remember_me'|trans }}
            <span></span>
        </label>
    </div>
</form>
