{% extends "@FrontFront/layout.html.twig" %}

{% block title %}{{ getSettingByName('COMPANY_NAME') }} - Mon panier{% endblock %}
{% block meta_description %}{% endblock %}

{% block ogtitle %}{{ getSettingByName('COMPANY_NAME') }} - Mon panier{% endblock %}
{% block ogtype %}website{% endblock %}
{% block ogurl %}{{ app.request.uri }}{% endblock %}
{% block ogimage %}{{ app.request.schemeAndHttpHost() ~ asset('assets_global/img/logo.png') }}{% endblock %}
{% block ogdescription %}{% endblock %}

{% block stylesheets %}
    {% if app.debug %}
        <link rel="stylesheet" href="{{ asset('assets_back/global/plugins/bootstrap-dialog/css/bootstrap-dialog.css') }}" type="text/css"/>
        <link rel="stylesheet" href="{{ asset('assets_front/plugins/bootstrap-touchspin/jquery.bootstrap-touchspin.min.css') }}" type="text/css">
        <link rel="stylesheet" href="{{ asset('assets_front/css/steps.css') }}" type="text/css">
    {% else %}
        {% stylesheets filter='cssrewrite'
        'assets_back/global/plugins/bootstrap-dialog/css/bootstrap-dialog.css'
        'assets_front/plugins/bootstrap-touchspin/jquery.bootstrap-touchspin.min.css'
        'assets_front/css/steps.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css"/>
        {% endstylesheets %}
    {% endif %}
{% endblock %}

{% block body %}
    <div class=" mt50" style="min-height: 550px;">
        {{ include('@FrontCart/Cart/steps.html.twig', {'step1': 'inprocess', 'step2': null, 'step3': null, 'step4': null, 'step5': null, 'step6': null}) }}
        {{ include('@FrontCart/Cart/view.html.twig', {'cart': cart, 'isEditable': true}) }}

    </div>
{% endblock %}

{% block javascripts %}
    {% if app.debug %}
        <script src="{{ asset('assets_back/global/plugins/bootstrap-dialog/js/bootstrap-dialog.js') }}" type="text/javascript"></script>
        <script src="{{ asset('assets_front/plugins/bootstrap-touchspin/jquery.bootstrap-touchspin.min.js') }}"></script>
        <script src="{{ asset('bundles/frontcart/js/cart.js') }}" type="text/javascript"></script>
    {% else %}
        {% javascripts
        'assets_back/global/plugins/bootstrap-dialog/js/bootstrap-dialog.js'
        'assets_front/plugins/bootstrap-touchspin/jquery.bootstrap-touchspin.min.js'
        '@FrontCartBundle/Resources/public/js/cart.js' %}
        <script src="{{ asset_url }}" type="text/javascript"></script>
        {% endjavascripts %}
    {% endif %}
{% endblock %}